<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:mapbox="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical"
                                             tools:layout_editor_absoluteX="0dp"
                                             tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        mapbox:layout_constraintBottom_toBottomOf="@id/guideline7"
        android:layout_height="wrap_content"/>

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:layout_constraintTop_toBottomOf="@id/guideline7"
        mapbox:mapbox_cameraTargetLat="42.347"
        mapbox:mapbox_cameraTargetLng="-71.071"
        mapbox:mapbox_cameraZoomMin="11.4"
        mapbox:mapbox_styleUrl="@string/mapbox_style_light"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        mapbox:layout_constraintGuide_percent="0.15"/>

</android.support.constraint.ConstraintLayout>